<div>
    {{#if show}}
    <div id="formSectionId" class="formSectionId">
        <div>
            <h6>Share Task id: {{roomId}} with Your Friend</h6>

        </div>
        <form class="col-md-6 col-md-offset-3" action="/task" method="post" type="submit">
            {{#each errorMessage}}
            <div class="alert alert-danger">
                {{this.taskId}}
            </div>
            {{/each}}
            <div class="form-group">
                <label for="exampleInputEmail1">Email address of Your peer</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email" name="email" value="{{email}}">
                <input type="hidden" id="userEmail" name="userEmail" value="{{user.email}}">
                <input type="hidden" id="userName" name="userName" value="{{user.name}}">
                <input type="hidden" id="taskId" name="taskId" value="{{roomId}}">
            </div>
            <div class="form-group">
                <label for="text">Message to Peer</label>
                <textarea type="text" class="form-control" id="msg" name="msg" value="{{msg}}" rows="1">
                </textarea>
            </div>
            <div style="display:flex;" class="my-2">
                <button type="submit" class="btn btn-success">Send</button>
            </div>

        </form>
        <button onclick="toggleVisibility()" class="btn btn-danger my-2">Close</button>
    </div>
    {{/if}}

    <div class="row">
        <div class="col-md-8 CodeScreen">
            <textarea id="code-screen">{{content}}</textarea>
        </div>
        <div class="col-md-4 chatbox" id="chatbox">
            {{!-- video call--}}
            <div class="video-container">
                <div>
                    <p>Your Peer</p>
                    <video autoplay id="second-video"></video>
                </div>

                <div>
                    <p>You</p>
                    <video autoplay id="my-video" muted="true"></video>
                </div>

            </div>
            <div id="step2" class="step2">
                <p>Your ID: <span class="my-id" id="my-id">...</span></p>
                <div class="form-inline class1A">
                    <input type="text" class="form-control callto-id" placeholder="Call User ID...." id="callto-id">
                    <a href="#" class="btn btn-sm btn-success make-call mx-2" id="make-call">Call</a>
                </div>
            </div>
            <div class="step3 class1A" id="step3">
                <p>Currently in call with <span id="second-id" class="second-id">...</span></p>
                <p><a href="#" class="btn btn-sm btn-danger end-call mx-2" id="end-call">End call</a></p>
            </div>
            <section class="chat_section">
                <div class="brand">
                    <img height="40px" src="/images/wassup.png" alt="" />
                    <h1>Uday ChatApp</h1>
                    <span class="userName" id="userName"></span>
                </div>
                <div class="message_area" id="message__area"></div>
                <div class="onlyforChat">
                    <textarea id="textarea" cols="30" rows="1" placeholder="Write a message"></textarea>
                </div>
            </section>
        </div>
    </div>
    <input type="hidden" value="{{roomId}}" id="roomId">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/javascript/javascript.min.js"></script>
    <script src="/plugins/ot/ot.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="hthttps://cdnjs.cloudflare.com/ajax/libs/peerjs/2.0.0-beta.3/peerjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/peerjs/2.0.0-beta.3/peerjs.cjs.js"></script>
