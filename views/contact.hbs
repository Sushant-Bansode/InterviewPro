<h1 class="text-center">Contact US</h1>
<form class="col-md-6 col-md-offset-3" method="post" type="submit"  >
    {{#each errorMessage}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
  <div class="form-group">
    <label >Name</label>
    <input type="text"  id="name" name="username"class="form-control" placeholder="Enter Name" value={{username}}>
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email" value={{email}}>
  </div>
  <div class="form-group">
    <label for="text">Message</label>
    <textarea  type="text" class="form-control" id="message" rows="3" name="msg" >{{msg}}
    </textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>